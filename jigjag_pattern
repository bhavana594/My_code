#include<stdio.h>
int main()
{
	int n = 5;
	int height,space = 0,direction = 1,i,j;
	scanf("%d",&height);
	//int space = 0;
	//int direction = 1;
	
	for(i = 0; i<height; i++)
	{
		for(j = 0; j <space; j++)
		{
			printf(" ");
		}
		for(j = 0; j < n; j++)
		{
			printf("*");
		}
		printf("\n");
		
		space+=direction;
		if(space == n || space == 0)
		{
			direction*=-1;
		}
	}
	return 0;
}
